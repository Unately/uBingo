    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup/Download PAX",
            "type": "shell",
            "command": "rm pax & curl https://github.com/froehlichA/pax/releases/latest/download/pax -O pax && chmod +x pax",
            "windows": {
                "command": "del libssl*.dll; del libcrypto*.dll; del pax.exe; del cacert.pem; curl https://github.com/froehlichA/pax/releases/latest/download/pax-windows.zip -O pax-windows.zip; tar -xf pax-windows.zip; del pax-windows.zip",
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Upgrade Mods",
            "type": "shell",
            "command": "./pax -y upgrade",
            "windows": {
                "command": ".\\pax.exe -y upgrade"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
              }
        },
        {
            "label": "Export Pack",
            "type": "shell",
            "command": "./pax -y export",
            "windows": {
                "command": ".\\pax.exe -y export"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
              }
        },
        {
            "label": "Setup/Download server generator",
            "type": "shell",
            "command": "rm server_generator & curl https://github.com/henkelmax/curseforge-modpack-server-generator/releases/download/1.0.1/server_generator_linux_1.0.1 -O server_generator && chmod +x server_generator",
            "windows": {
                "command": "del server_generator.exe; curl https://github.com/henkelmax/curseforge-modpack-server-generator/releases/download/1.0.1/server_generator_win_1.0.1.exe -O server_generator.exe",
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Export Server",
            "type": "shell",
            "command": "./server_generator --modpack-zip \".out/uBingo.zip\" --destination-path \".out/uBingo-Server.zip\"",
            "windows": {
                "command": ".\\server_generator.exe --modpack-zip \".out/uBingo.zip\" --destination-path \".out/uBingo-Server.zip\""
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
              }
        },
        {
            "label": "Cleanup",
            "type": "shell",
            "command": "rm server_generator & rm libssl*.dll & rm libcrypto*.dll & rm pax.exe & rm cacert.pem &rm -r .out",
            "windows": {
                "command": "del libssl*.dll; del libcrypto*.dll; del pax.exe; del cacert.pem; del server_generator.exe; Remove-Item -path .\\.out â€“force -recurse"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
              }
        }
    ]
}